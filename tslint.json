{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-react-hooks"
  ],
  "rules": {
    "no-unused-variable": true,
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "jsx-alignment": false,
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double",
      "avoid-escape"
    ],
    "ordered-imports": [
      false
    ],
    "jsx-boolean-value": [
      false
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "no-var-requires": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "whitespace": [
      true,
      "check-module"
    ],
    "trailing-comma": [true, {
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      },
      "esSpecCompliant": true
    }]
  }
}
